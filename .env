# .env - Frontend Environment Variables for React + Vite

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=Eat-Fast
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_PHOTOS=5
VITE_ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/jpg,image/png

# Features Flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_UPLOAD_PROGRESS=true
VITE_ENABLE_AUTO_SAVE=false

# External Services (if needed)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Contact Information
VITE_SUPPORT_EMAIL=support@eat-fast.com
VITE_SUPPORT_PHONE=+237 690 123 456

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/eatfast
VITE_TWITTER_URL=https://twitter.com/eatfast
VITE_INSTAGRAM_URL=https://instagram.com/eatfast

# Terms and Privacy
VITE_TERMS_URL=/terms-of-service
VITE_PRIVACY_URL=/privacy-policy



# Set environment variable manually
$env:NODE_OPTIONS="--max-old-space-size=1024"
npx vite build





# .env.local (for React frontend - local development)
# Place this file in your React app root directory

# =============================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# API Configuration - Local Django Backend
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_API_ADMIN_URL=http://localhost:8000/admin
REACT_APP_API_TIMEOUT=10000

# Backend Health Check
REACT_APP_HEALTH_CHECK_URL=http://localhost:8000/api/v1/health

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Enable development features
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_API_LOGS=true
REACT_APP_ENABLE_DEV_TOOLS=true

# =============================================================================
# CORS & SECURITY (for local development)
# =============================================================================

# Your React app URL (for CORS)
REACT_APP_FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPTIONAL: Database Connection Test
# =============================================================================

# Test endpoints
REACT_APP_TEST_CONTACT_ENDPOINT=/contact/config/
REACT_APP_TEST_PARTNER_ENDPOINT=/partner/config/

