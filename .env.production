# EatFast Environment Variables - Express.js + Firebase Backend

# ========================================
# API Configuration (Express.js Backend)
# ========================================
VITE_API_BASE_URL=https://your-express-backend.onrender.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# ========================================
# Firebase Configuration
# ========================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id
VITE_FIREBASE_VAPID_KEY=your_vapid_key

# ========================================
# External Services
# ========================================
# Google Maps API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Gateway Keys (Frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_NOUPIA_PUBLIC_KEY=your_noupia_public_key
VITE_CAMPAY_PUBLIC_KEY=your_campay_public_key

# ========================================
# Application Configuration
# ========================================
VITE_APP_NAME=EatFast - Food Delivery Cameroon
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_TITLE=EatFast - Order Food Online in Cameroon
VITE_APP_DESCRIPTION=Fast food delivery service in Cameroon. Order from local restaurants with quick delivery.

# ========================================
# Performance & Features
# ========================================
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_UPLOAD_PROGRESS=true
VITE_ENABLE_AUTO_SAVE=true

# ========================================
# File Upload Configuration
# ========================================
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_PHOTOS=5
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf

# ========================================
# Monitoring & Analytics
# ========================================
VITE_SENTRY_DSN=your_sentry_dsn
VITE_GA_MEASUREMENT_ID=your_ga_measurement_id
VITE_HOTJAR_ID=your_hotjar_id

# ========================================
# Contact Information
# ========================================
VITE_SUPPORT_EMAIL=support@eatfast.cm
VITE_SUPPORT_PHONE=+237 690 123 456
VITE_SUPPORT_WHATSAPP=+237690123456

# ========================================
# Social Media
# ========================================
VITE_FACEBOOK_URL=https://facebook.com/eatfast
VITE_TWITTER_URL=https://twitter.com/eatfast
VITE_INSTAGRAM_URL=https://instagram.com/eatfast
VITE_LINKEDIN_URL=https://linkedin.com/company/eatfast

# ========================================
# Development Settings
# ========================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
VITE_MOCK_API=false

# ========================================
# PWA Configuration
# ========================================
VITE_PWA_NAME=EatFast - Food Delivery
VITE_PWA_SHORT_NAME=EatFast
VITE_PWA_DESCRIPTION=Order delicious food online in Cameroon
VITE_PWA_THEME_COLOR=#FF6B35
VITE_PWA_BACKGROUND_COLOR=#ffffff
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait

# ========================================
# Geolocation & Maps
# ========================================
VITE_DEFAULT_LATITUDE=3.8480
VITE_DEFAULT_LONGITUDE=11.5021
VITE_DEFAULT_CITY=Yaound√©
VITE_DEFAULT_COUNTRY=Cameroon
VITE_MAP_ZOOM_LEVEL=13
VITE_DELIVERY_RADIUS=10000

# ========================================
# Business Configuration
# ========================================
VITE_CURRENCY=XAF
VITE_CURRENCY_SYMBOL=FCFA
VITE_MIN_ORDER_AMOUNT=1000
VITE_DELIVERY_FEE=500
VITE_SERVICE_FEE_PERCENTAGE=5
VITE_TAX_PERCENTAGE=19.25

# ========================================
# Timing Configuration
# ========================================
VITE_ORDER_TIMEOUT=30
VITE_DELIVERY_TIME_MIN=15
VITE_DELIVERY_TIME_MAX=60
VITE_RESTAURANT_PREP_TIME=20

# ========================================
# Security
# ========================================
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# ========================================
# Localization
# ========================================
VITE_DEFAULT_LANGUAGE=fr
VITE_SUPPORTED_LANGUAGES=fr,en
VITE_DEFAULT_TIMEZONE=Africa/Douala
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm

