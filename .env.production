# Production Environment Variables for Render Deployment

# Node.js Configuration
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=512

# Application Configuration
VITE_APP_NAME=Eat-Fast
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_BASE_URL=https://your-backend-api.render.com/api/v1
VITE_API_VERSION=v1

# Performance Configuration
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_UPLOAD_PROGRESS=true
VITE_ENABLE_AUTO_SAVE=true

# Asset Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_PHOTOS=3
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# External Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_FIREBASE_API_KEY=your_firebase_api_key

# Contact Information
VITE_SUPPORT_EMAIL=support@eat-fast.com
VITE_SUPPORT_PHONE=+237 690 123 456

# Social Media
VITE_FACEBOOK_URL=https://facebook.com/eatfast
VITE_TWITTER_URL=https://twitter.com/eatfast
VITE_INSTAGRAM_URL=https://instagram.com/eatfast

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=true



# Set environment variable manually
$env:NODE_OPTIONS="--max-old-space-size=1024"
npx vite build