# Production Environment Variables for Render Deployment

# Node.js Configuration
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=1024

# API Configuration
VITE_API_BASE_URL=https://your-backend-api.render.com/api/v1
VITE_API_VERSION=v1
VITE_WS_BASE_URL=wss://your-backend-api.render.com/ws

# Application Configuration
VITE_APP_NAME=Eat-Fast
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production
VITE_APP_URL=https://eat-fast-app.onrender.com

# Performance Optimizations
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_UPLOAD_PROGRESS=true
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_SERVICE_WORKER=true

# Asset Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_PHOTOS=3
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# CDN Configuration (if using)
VITE_CDN_URL=https://cdn.example.com
VITE_ASSETS_URL=https://assets.eat-fast.com

# External Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_SENTRY_DSN=your_sentry_dsn

# Payment Services
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Analytics
VITE_GA_TRACKING_ID=your_google_analytics_id
VITE_HOTJAR_ID=your_hotjar_id

# Contact Information
VITE_SUPPORT_EMAIL=support@eat-fast.com
VITE_SUPPORT_PHONE=+237 690 123 456

# Social Media
VITE_FACEBOOK_URL=https://facebook.com/eatfast
VITE_TWITTER_URL=https://twitter.com/eatfast
VITE_INSTAGRAM_URL=https://instagram.com/eatfast

# Security
VITE_ENABLE_HTTPS=true
VITE_ENABLE_HSTS=true

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true