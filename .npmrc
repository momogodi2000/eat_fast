# NPM configuration for better performance and memory usage
fund=false
audit=false
progress=false
loglevel=error

# Reduce memory usage during install
maxsockets=1
prefer-offline=true
cache-max=86400000

# Production optimizations
production=false
optional=false

# Registry settings
registry=https://registry.npmjs.org/

# Timeout settings
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000