# Application Configuration
NODE_ENV=production
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=Eat Fast
VITE_APP_VERSION=1.0.0

# Google Analytics
VITE_GA_MEASUREMENT_ID=GA_MEASUREMENT_ID

# Database Configuration
DATABASE_URL=postgresql://eatfast_user:password@localhost:5432/eatfast
DB_USER=eatfast_user
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Payment Configuration (if applicable)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Monitoring
GRAFANA_PASSWORD=admin123

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# PWA Configuration
PWA_NAME=Eat Fast - Food Delivery Cameroon
PWA_SHORT_NAME=Eat Fast
PWA_DESCRIPTION=Order delicious food online in Cameroon
PWA_THEME_COLOR=#FF6B35
PWA_BACKGROUND_COLOR=#ffffff

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MONITORING=false 